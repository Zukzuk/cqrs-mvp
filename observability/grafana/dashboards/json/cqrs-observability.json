{
  "__inputs": [
    { "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus", "pluginName": "Prometheus" },
    { "name": "DS_TEMPO", "label": "Tempo", "type": "datasource", "pluginId": "tempo", "pluginName": "Tempo" }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "11.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.0.0" },
    { "type": "datasource", "id": "tempo", "name": "Tempo", "version": "2.0.0" },
    { "type": "panel", "id": "traces", "name": "Traces", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" }
  ],
  "title": "CQRS Observability",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["cqrs", "otel", "rabbitmq"],
  "templating": {
    "list": [
      { "type": "datasource", "name": "DS_PROMETHEUS", "query": "prometheus", "label": "Prometheus", "hide": 2 },
      { "type": "datasource", "name": "DS_TEMPO", "query": "tempo", "label": "Tempo", "hide": 2 },
      {
        "name": "queue",
        "type": "query",
        "label": "queue",
        "datasource": "${DS_PROMETHEUS}",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "query": "label_values(rabbitmq_queue_messages_ready, queue)",
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "traces",
      "title": "Recent traces (flat list)",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "datasource": "Tempo",
      "targets": [
        {
          "refId": "A",
          "datasource": "Tempo",
          "queryType": "traceqlSearch",
          "query": "{}",
          "limit": 200
        }
      ],
      "options": {
        "showSearch": false
      }
    },
    {
      "id": 2,
      "type": "table",
      "title": "Recent spans (flat)",
      "pluginVersion": "11.1.0",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 12 },
      "datasource": "Tempo",
      "targets": [
        {
          "refId": "A",
          "datasource": "Tempo",
          "queryType": "traceql",
          "query": "{} | span()",
          "limit": 200
        }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "options": { "showHeader": true }
    },
    {
      "type": "stat",
      "title": "Spans IN (Collector)",
      "gridPos": { "h": 5, "w": 12, "x": 0, "y": 12 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "sum(rate(otelcol_receiver_accepted_spans{receiver=\"otlp\"}[5m]))" }
      ]
    },
    {
      "type": "stat",
      "title": "Spans OUT â†’ Tempo",
      "gridPos": { "h": 5, "w": 12, "x": 12, "y": 12 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        { "refId": "A", "expr": "sum(rate(otelcol_exporter_sent_spans{exporter=\"otlp/tempo\"}[5m]))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "RabbitMQ publish rate (msgs/s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [ { "refId": "A", "expr": "rate(rabbitmq_messages_published_total[5m])" } ]
    },
    {
      "type": "timeseries",
      "title": "RabbitMQ deliver rate (msgs/s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [ { "refId": "A", "expr": "rate(rabbitmq_messages_delivered_total[5m])" } ]
    },
    {
      "type": "bargauge",
      "title": "Queue depth (messages_ready)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 },
      "datasource": "${DS_PROMETHEUS}",
      "options": { "displayMode": "gradient", "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "unit": "none", "min": 0 }, "overrides": [] },
      "targets": [ { "refId": "A", "expr": "rabbitmq_queue_messages_ready{queue=~\"$queue\"}", "legendFormat": "{{queue}}" } ]
    },
    {
      "type": "bargauge",
      "title": "Consumers per queue",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 },
      "datasource": "${DS_PROMETHEUS}",
      "options": { "displayMode": "basic", "orientation": "horizontal" },
      "fieldConfig": { "defaults": { "unit": "none", "min": 0 }, "overrides": [] },
      "targets": [ { "refId": "A", "expr": "rabbitmq_queue_consumers{queue=~\"$queue\"}", "legendFormat": "{{queue}}" } ]
    }
  ]
}
