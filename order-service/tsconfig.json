{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@daveloper/broker": [ "../shared/broker/dist" ],
      "@daveloper/domain": [ "../shared/domain/dist" ],
      "@daveloper/eventstore": [ "../shared/eventstore/dist" ],
    },
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [ "src/**/*" ]
}