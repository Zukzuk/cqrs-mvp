{
  "name": "cqrs-mvp",
  "description": "CQRS-ES System (MVP)",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "observability/**",
    "shared/interfaces",
    "shared/**",
    "observability/**",
    "order-eventstore-service",
    "order-service",
    "shop-bff-service",
    "shop-projection-db",
    "shop-projection-service",
    "shop-webserver",
    "scripts/**"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace shared",
    "build:obs": "npm run build --workspace observability",
    "up": "docker build -f Dockerfile.base.nodejs -t cqrs-mvp/base:latest . && docker compose -f docker-compose.yml -f docker-compose.obs.yml --profile obs up --build -d",
    "up:bare": "docker build -f Dockerfile.base.nodejs -t cqrs-mvp/base:latest . && docker compose up --build -d",
    "down": "docker compose -f docker-compose.yml -f docker-compose.obs.yml --profile obs down",
    "tools": "concurrently \"npm run mongoui\" \"npm run visualize\"",
    "mongoui": "ts-node observability/mongoui/src/index.ts",
    "visualize": "ts-node observability/visualize/src/index.ts",
    "generate": "ts-node observability/visualize/src/generate.ts",
    "codebase": "node scripts/codebase.js",
    "clean": "node scripts/clean.js"
  }
}