{
  "name": "cqrs-mvp",
  "description": "CQRS-ES System (MVP)",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "shared/domain",
    "shared/broker",
    "shared/eventstore",
    "order-eventstore",
    "order-service",
    "shop-projection-service",
    "shop-bff-service",
    "shop-frontend",
    "tools/mongoui",
    "tools/visualize"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "start": "docker build -f Dockerfile.base.nodejs -t cqrs-mvp/base:latest . && docker-compose up --build",
    "mongoui": "ts-node tools/mongoui/src/index.ts",
    "visualize": "ts-node tools/visualize/src/index.ts",
    "generate": "ts-node tools/visualize/src/generate.ts"
  }
}